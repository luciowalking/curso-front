doctype html
html(lang="en")
	head
		-var title="Projeto Front-End Title"
		-var description="Projeto front-End Description"
		// - Metas
		// - =============================
		meta(name="viewport" content="width=device-width, minimun-scale=1.0, maximum-scale=1.0")
		meta(charset="utf-8")

		// - SEO
		meta(name="description" content=description)
		meta(name="robots" content="index,follow")
		title=title

		// - Styles
		// - ===============================
		link(rel="stylesheet" href="assets/styles/style.css")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/6.0.0/normalize.min.css")

		// - Fonts
		// - ===============================
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster|Open+Sans:300i,400")
	body
		include ./../partials/header.pug

		main
			block content

		include ./../partials/footer.pug


		script(type="text/javascript" src="assets/scripts/script.js" async)